daemonize yes
pidfile "<%= node['redis']['pidfile'] %>"
port <%= node['redis']['port'] %>

tcp-backlog <%= node['redis']['tcp-backlog'] %>
bind <%= node['redis']['bind'] %>
# unixsocket /tmp/redis.sock
# unixsocketperm 755
timeout <%= node['redis']['timeout'] %>
tcp-keepalive <%= node['redis']['tcp-keepalive'] %>

loglevel <%= node['redis']['loglevel'] %>
logfile "<%= node['redis']['logfile'] %>"
# syslog-enabled no
# syslog-ident redis
# syslog-facility local0

#databases 16

################################ SNAPSHOTTING  ################################
save 900 1
save 300 10
save 60 10000

stop-writes-on-bgsave-error yes
rdbcompression yes
rdbchecksum yes

dbfilename "dump.rdb"
dir "/var/lib/redis"

################################# REPLICATION #################################
# slaveof <masterip> <masterport>
# masterauth <master-password>
slave-serve-stale-data yes
slave-read-only yes

# repl-ping-slave-period 10
# repl-timeout 60
repl-disable-tcp-nodelay no
repl-backlog-size 50mb
# repl-backlog-ttl 3600

slave-priority 100
# min-slaves-to-write 3
# min-slaves-max-lag 10

################################## SECURITY ###################################
# requirepass foobared
# rename-command CONFIG ""

################################### LIMITS ####################################
maxclients 10000
maxmemory <%= node['redis']['maxmemory'] %>
# maxmemory-policy volatile-lru
# maxmemory-samples 3

############################## APPEND ONLY MODE ###############################
appendonly no
appendfilename "appendonly.aof"
appendfsync everysec
no-appendfsync-on-rewrite no

auto-aof-rewrite-percentage 100
auto-aof-rewrite-min-size 64mb

################################ LUA SCRIPTING  ###############################
lua-time-limit 5000

################################## SLOW LOG ###################################
slowlog-log-slower-than 10000
slowlog-max-len 128

############################# Event notification ##############################
notify-keyspace-events ""

############################### ADVANCED CONFIG ###############################
hash-max-ziplist-entries 512
hash-max-ziplist-value 64

list-max-ziplist-entries 512
list-max-ziplist-value 64

set-max-intset-entries 512

zset-max-ziplist-entries 128
zset-max-ziplist-value 64

activerehashing yes

client-output-buffer-limit normal 0 0 0
client-output-buffer-limit slave 256mb 64mb 60
client-output-buffer-limit pubsub 32mb 8mb 60

hz 10

aof-rewrite-incremental-fsync yes

