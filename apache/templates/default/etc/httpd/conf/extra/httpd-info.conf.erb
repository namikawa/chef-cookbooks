<Location /server-status>
    SetHandler server-status
    <%- node['apache']['server-info']['RequireIP'].each do |ip| %>
    Require ip <%= ip %>
    <%- end %>
</Location>

ExtendedStatus On

<Location /server-info>
    SetHandler server-info
    <%- node['apache']['server-info']['RequireIP'].each do |ip| %>
    Require ip <%= ip %>
    <%- end %>
</Location>
